<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- 상단 탭 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMeasurement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 좌측 컬럼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutMeasurement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/listViewRealtimeLogs"
        app:layout_constraintWidth_percent="0.55"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutHeader"
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
        <!-- ====== T1 HEADER ====== -->
        <LinearLayout
            android:id="@+id/linearLayoutHeaderT1"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewBackgroundT1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_illustration_placeholder"/>
            </FrameLayout>

            <com.coremotion.perik3.ui.ThreeStateIndicatorView
                android:id="@+id/threeStateIndicatorView"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- ====== T2 HEADER ====== -->
        <LinearLayout
            android:id="@+id/linearLayoutHeaderT2"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewBackgroundT2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_illustration_placeholder"/>

                <com.coremotion.perik3.ui.OverlayMarkerDirectionView
                    android:id="@+id/overlayMarkerDirectionViewT2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <com.coremotion.perik3.ui.SixCellFillGraphView
                android:id="@+id/sixCellFillGraphViewT2"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- ====== T3 HEADER ====== -->
        <LinearLayout
            android:id="@+id/linearLayoutHeaderT3"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewBackgroundT3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_illustration_placeholder"/>

                <com.coremotion.perik3.ui.OverlayMarkerDirectionView
                    android:id="@+id/overlayMarkerDirectionViewT3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <com.coremotion.perik3.ui.SixCellBipolarGraphView
                android:id="@+id/sixCellBipolarGraphViewT3"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 그래프(LineChart) -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartRealtime"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutButtons"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!-- 버튼 영역 -->
        <LinearLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/buttonBluetoothConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="블루투스 연결"/>

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="영점"/>

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="시작"/>

            <Button
                android:id="@+id/buttonEndAndSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="종료 및 저장"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 우측 로그 리스트 -->
    <ListView
        android:id="@+id/listViewRealtimeLogs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutMeasurement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        android:layout_marginTop="10dp"
        android:background="#f3f3f3"
        android:divider="#333333"
        android:dividerHeight="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>