<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <!-- 상단 탭 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMeasurement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/constraintLayoutLeft"/>

    <!-- 좌측 컬럼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutMeasurement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/constraintLayoutLogArea"
        app:layout_constraintWidth_percent="0.60"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutHeader"
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
        <!-- ====== T1 HEADER ====== -->
        <LinearLayout
            android:id="@+id/linearLayoutHeaderT1"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewBackgroundT1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_illustration_placeholder"/>
            </FrameLayout>

            <com.coremotion.perik3.ui.ThreeStateIndicatorView
                android:id="@+id/threeStateIndicatorView"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- ====== T2 HEADER ====== -->
        <LinearLayout
            android:id="@+id/linearLayoutHeaderT2"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewBackgroundT2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_illustration_placeholder"/>

                <com.coremotion.perik3.ui.OverlayMarkerDirectionView
                    android:id="@+id/overlayMarkerDirectionViewT2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <com.coremotion.perik3.ui.SixCellFillGraphView
                android:id="@+id/sixCellFillGraphViewT2"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- ====== T3 HEADER ====== -->
        <LinearLayout
            android:id="@+id/linearLayoutHeaderT3"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewBackgroundT3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_illustration_placeholder"/>

                <com.coremotion.perik3.ui.OverlayMarkerDirectionView
                    android:id="@+id/overlayMarkerDirectionViewT3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <com.coremotion.perik3.ui.SixCellBipolarGraphView
                android:id="@+id/sixCellBipolarGraphViewT3"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 그래프(LineChart) -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartRealtime"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutButtons"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!-- 버튼 영역 -->
        <LinearLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Bluetooth Connect (텍스트 버튼 유지) -->
            <Button
                android:id="@+id/buttonBluetoothConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="블루투스 연결"/>

            <!-- Zero -->
            <LinearLayout
                android:id="@+id/buttonZeroContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/buttonZero"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calibration_icon"/>

                <TextView
                    android:id="@+id/textZero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Baseline"
                    android:textSize="12sp"
                    android:textColor="#444"/>
            </LinearLayout>

            <!-- Start -->
            <LinearLayout
                android:id="@+id/buttonStartContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/buttonStart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/play_icon"/>

                <TextView
                    android:id="@+id/textStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Measurement"
                    android:textSize="12sp"
                    android:textColor="#444"/>
            </LinearLayout>

            <!-- End -->
            <LinearLayout
                android:id="@+id/buttonEndAndSaveContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/buttonEndAndSave"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/stop_icon"/>

                <TextView
                    android:id="@+id/textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Results"
                    android:textSize="12sp"
                    android:textColor="#444"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 우측 로그 리스트 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutLogArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.40"
        android:layout_marginTop="10dp"
        android:background="#f3f3f3">

        <!-- 표 헤더 -->
        <LinearLayout
            android:id="@+id/layoutLogHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:background="#E6E6E6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvHeaderC1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Timestamp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvHeaderC2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="State"
                android:textStyle="bold"
                android:textSize="12sp"
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvHeaderC3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Force"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvHeaderC4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Disp(mm)"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvHeaderC5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Rotation"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- 로그 리스트 -->
        <ListView
            android:id="@+id/listViewRealtimeLogs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutLogHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:divider="#333333"
            android:dividerHeight="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>